{
  "compilerOptions": {
    "skipLibCheck": true,
    "removeComments": true,
    "noUnusedLocals": true,
    "resolveJsonModule": true,
    "noUnusedParameters": true,
    "target": "ES2022",
    "module": "ES2022",
    "baseUrl": ".",
    "rootDir": "src",
    "outDir": "dist",
    "moduleResolution": "Bundler",
    "typeRoots": [ "./src/interfaces.d.ts" ]
  },
  "include": [ "src" ],
  "exclude": [ ".yarn/cache", ".yarn/unplugged", ".git", "src/*.json" ]
}
